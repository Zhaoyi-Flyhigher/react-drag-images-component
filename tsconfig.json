{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "jsx": "react",
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "*": ["types/*", "node_modules/*"]
    }
  },
  "include": [ "src"],
  "exclude": ["node_modules"]
}